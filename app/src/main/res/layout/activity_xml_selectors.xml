<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xml_selectors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidexamples.app.flows.views.XmlSelectorsActivity">
    <include layout="@layout/include_top_toolbar"/>
    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/imagebutton_selectors_image"
        android:background="@drawable/imagebutton_selectors_example"
        android:id="@+id/imageButton"/>
</LinearLayout>
